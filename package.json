{
  "name": "@fcoded/adonis-hashids",
  "version": "1.0.1",
  "description": "A package to generate YouTube-like IDs for AdonisJS Lucid models",
  "main": "build/providers/LucidHashIdsProvider.js",
  "engines": {
    "node": "14 || 16 || 18"
  },
  "scripts": {
    "mrm": "mrm --preset=@adonisjs/mrm-preset",
    "test": "c8 -r html node -r ts-node/register/transpile-only bin/test.ts",
    "cover": "tsc && nyc --reporter=html --reporter=text npm run test",
    "pretest": "npm run lint",
    "clean": "del-cli build",
    "copyfiles": "copyfiles \"templates/**/*.txt\" \"instructions.md\" build",
    "compile": "npm run lint && npm run clean && tsc && npm run copyfiles",
    "build": "npm run compile",
    "prepublishOnly": "npm run build",
    "lint": "eslint . --ext=.ts",
    "format": "prettier --write .",
    "commit": "git-cz",
    "release": "np --message=\"chore(release): %s\"",
    "version": "npm run build",
    "sync-labels": "github-label-sync --labels ./node_modules/@adonisjs/mrm-preset/gh-labels.json eokwukwe/adonis-hashids"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eokwukwe/adonis-hashids.git"
  },
  "homepage": "https://github.com/eokwukwe/adonis-hashids#readme",
  "keywords": [
    "lucid",
    "adonis",
    "adonisjs",
    "adonis-hashids",
    "adonis-lucid-hashids"
  ],
  "author": "Ewurum Okwukwe",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eokwukwe/adonis-hashids/issues"
  },
  "devDependencies": {
    "@adonisjs/ace": "^11.3.1",
    "@adonisjs/application": "^5.3.0",
    "@adonisjs/config": "^3.0.9",
    "@adonisjs/core": "^5.9.0",
    "@adonisjs/lucid": "^18.4.0",
    "@adonisjs/mrm-preset": "^5.0.3",
    "@adonisjs/require-ts": "^2.0.13",
    "@adonisjs/sink": "^5.4.3",
    "@japa/assert": "^1.4.1",
    "@japa/expect": "^2.0.2",
    "@japa/run-failed-tests": "^1.1.1",
    "@japa/runner": "^2.5.1",
    "@japa/spec-reporter": "^1.3.3",
    "@poppinss/dev-utils": "^2.0.3",
    "@types/node": "^20.4.2",
    "c8": "^8.0.0",
    "commitizen": "^4.3.0",
    "copyfiles": "^2.4.1",
    "cz-conventional-changelog": "^3.3.0",
    "del-cli": "^5.0.0",
    "eslint": "^8.44.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-adonis": "^2.1.1",
    "eslint-plugin-prettier": "^5.0.0",
    "github-label-sync": "^2.3.1",
    "husky": "^8.0.3",
    "knex": "^2.5.1",
    "mrm": "^4.1.17",
    "np": "^8.0.4",
    "prettier": "^3.0.0",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^5.1.6",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "peerDependencies": {
    "hashids": "^2.3.0",
    "@adonisjs/core": "^5.8.4",
    "@adonisjs/lucid": "^18.4.0"
  },
  "mrmConfig": {
    "core": false,
    "license": "MIT",
    "services": [],
    "minNodeVersion": "16.13.1",
    "probotApps": []
  },
  "types": "build/adonis-typings/index.d.ts",
  "files": [
    "build/src",
    "build/providers",
    "build/templates",
    "build/adonis-typings",
    "build/instructions.md",
    "build/instructions.js"
  ],
  "eslintConfig": {
    "extends": [
      "plugin:adonis/typescriptPackage",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ]
    }
  },
  "eslintIgnore": [
    "build"
  ],
  "prettier": {
    "trailingComma": "es5",
    "semi": false,
    "singleQuote": true,
    "useTabs": false,
    "quoteProps": "consistent",
    "bracketSpacing": true,
    "arrowParens": "always",
    "printWidth": 100
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "np": {
    "contents": ".",
    "anyBranch": false
  },
  "publishConfig": {
    "access": "public"
  },
  "adonisjs": {
    "types": "@fcoded/adonis-hashids",
    "providers": [
      "@fcoded/adonis-hashids"
    ],
    "templates": {
      "basePath": "./build/templates",
      "config": [
        {
          "src": "config/hashids.txt",
          "dest": "hashids"
        }
      ]
    }
  }
}
